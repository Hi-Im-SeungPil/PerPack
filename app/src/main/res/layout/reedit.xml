<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/a2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="제목"
        android:textSize="18dp"
        android:paddingLeft="20sp"
        android:background="#C9E4FA"
        android:textColor="#3F51B5"
        android:paddingVertical="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:id="@+id/edit_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="제목 입력"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="20dp"/>

    <TextView
        android:id="@+id/abcd2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="출발 날짜"
        android:textSize="18dp"
        android:paddingLeft="20sp"
        android:background="#C9E4FA"
        android:textColor="#3F51B5"
        android:paddingVertical="3dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_title2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:id="@+id/linearLayout22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/abcd2">

        <TextView
            android:id="@+id/dateText2"
            android:layout_width="264dp"
            android:layout_height="40dp"
            android:paddingTop="7sp"
            android:hint="  달력 눌러서 날짜 설정하기→"
            android:textSize="20sp" />
        <Button
            android:id="@+id/set_dateCalendar2"
            android:onClick="showDatePicker2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_date_range_black_18dp"
            android:paddingTop="7dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>